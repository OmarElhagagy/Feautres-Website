{
  "compilerOptions": {
    "sourceMap": true,
    "module": "NodeNext",
    "outDir": "./dist",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
